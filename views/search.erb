<head>
  <script src="https://kit.fontawesome.com/269b88550f.js" crossorigin="anonymous"></script>
</head>

<div class="search-div">
    <h2>Find next you next book to read</h2>
    <form method="get" action="/search" class="search-form">
        <input type="text" name="q" id="q" class="searchbox" placeholder="Search a book...">
        <%# <input type="submit" class="submit" value="a"> %>
        <button><i class="fas fa-search button--yellow"></i></button>
    <form>
</div>
<%if @books != []%>
    <%=erb :"_books_list"%>
<%else%>
    <div class="search-empty">
        <img src="images/icon-book.png">
        <p class="waiting">Waiting for a query</p>  
    </div>
<%end%>
