<head>
  <style>
    /*** BOOKS PAGE STYLES ***/
    .books__table {
      margin: 0 auto;
      border-collapse: collapse;
      font-family: Nunito;
      font-style: normal;
      font-weight: normal;
      max-width: 1024px;
    }
    
    .books__table-title {
      text-align: left;
      font-size: 36px;
    }
    
    .books__table-header {
      font-size: 14px;
      text-align: left;
    }

    .book__title {
      font-size: 14px;
      color: #ED8936;
    }

    .books__table-row th, 
    .books__table-row td {
      border-bottom: 1px solid rgba(113, 128, 150, 0.8);
      padding: 15px 30px 15px 0;
    }
  </style>
</head>

<table class="books__table">
  <caption class="books__table-title">My books</caption>
  <thead class="books__table-header">
    <tr class="books__table-row">
      <th>Cover</th>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th colspan="3">Date added</th>
    </tr>
  </thead>
  <tbody>
    <% @my_books.each do |book| %>
      <tr class="books__table-row"> 
        <td><img src="<%= book.img_route %>" /></td>
        <td class="book__title"><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.date_added %></td>
        <%# <td><%= book.notes %>   
        <td><a href="/books/<%= book.id %>/edit"><img src="images/edit-img.png" /></a></td>
        <td><a href="/books/<%= book.id %>/delete"><img src="images/delete-img.png" /></a></td>
      </tr>
    <% end %>
  </tbody> 
</table>
